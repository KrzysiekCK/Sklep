{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }}
    {{ title }}
{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-sm-6 p-2">
                <div class="card card-dark-style" style="height: 100%">
                    <h5 class="card-header"><span class="fa fa-lock"></span> Logowanie</h5>
                    <div class="card-body">
                        <form class="form-group" action="{{ path('app_login') }}" method="post">
                            <label for="login">Login lub Email</label>
                            <input class="form-control" type="text" id="login" name="_username" value="{{ last_login }}" placeholder="Login lub Email..."/>

                            <label for="password">Hasło</label>
                            <input class="form-control" type="password" id="password" name="_password" placeholder="Hasło..." />

                            <button class="btn btn-info mt-2" type="submit"><span class="fa fa-sign-in"></span> Zaloguj się</button>
                            {% if error %}
                                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 p-2">
                <div class="card card-light-style" style="height: 100%">
                    <h5 class="card-header"><span class="fa fa-book"></span> Rejestracja</h5>
                    <div class="card-body text-center">
                        <h5 class="card-title">Nie masz jeszcze konta?</h5>
                        <p class="card-subtitle">Kliknij Zarejestruj Się i załóż je już teraz.</p>
                        <a href="{{ path('app_register') }}"><button class="btn btn-primary mt-2 button-size" >Zarejestruj się</button></a>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}