{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }}
    {{ title }}
{% endblock %}

{% block body %}

    <div class="container">

        <div class="row">
            <div class="col-sm-12 p-2">
                <div class="card card-light-style">
                    {{ form_start(form) }}

                    <div class="card-body">
                        <h5 class="card-title"><span class="fa fa-sign-in"></span> Dane Konta</h5>
                        <div class="form-row">
                            <div class=" col-sm-12">
                                {{ form_row(form.login) }}

                            </div>
                        </div>

                        <div class="form-row">
                            <div class="col-sm-6">
                                {{ form_row(form.plainPassword.first) }}
                            </div>
                            <div class="col-sm-6">
                                {{ form_row(form.plainPassword.second) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-12 p-2">
                <div class="card card-light-style">
                    <div class="card-body">
                        <h5 class="card-title"><span class="fa fa-sign-in"></span> Dane Kontaktowe</h5>
                        <div class="form-row">
                            <div class="col-sm-6">
                                {{ form_row(form.name) }}
                            </div>
                            <div class="col-sm-6">
                                {{ form_row(form.surname) }}
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="col-sm-6">
                                {{ form_row(form.email) }}
                            </div>
                            <div class="col-sm-6">
                                {{ form_row(form.phone) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-12 p-2">
                <div class="card card-light-style">
                    <div class="card-body">
                        <h5 class="card-title"><span class="fa fa-address-card"></span> Dane Adresowe</h5>
                        <div class="form-row">
                            <div class="col-sm-4">
                                {{ form_row(form.address) }}
                            </div>
                            <div class="col-sm-4">
                                {{ form_row(form.zip) }}
                            </div>
                            <div class="col-sm-4">
                                {{ form_row(form.city) }}
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="custom-control custom-checkbox">
                                <input class="custom-control-input" type="checkbox" id="acceptRules" required>
                                <label class="custom-control-label" for="acceptRules">
                                    Akceptuję warunki <a href="/">regulaminu</a> i <a href="/">politykę prywatności</a>. Zgadzam się na otrzymywanie informacji dotyczących zamówień w myśl ustawy z dnia 18 lipca 2002r. o świadczeniu usług drogą elektroniczną.
                                </label>
                            </div>
                        </div>

                        <button class="btn btn-info" type="submit">Zarejestruj Się!</button>

                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}