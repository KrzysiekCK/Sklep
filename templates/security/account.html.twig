                    {#<div>#}
                    {#<input>#}
                    {#</div>#}
                    {#<button class="btn btn-primary mt-2 button-size" type="submit">Zaloguj się</button>#}
                    {#</form>#}


                </div>
            </div>
            <div class="col-sm-6 p-1">
                <div class="card card-light-style" style="height: 100%">
                    <h5 class="card-header"><span class="fa fa-book"></span> Rejestracja</h5>
                    <div class="card-body">
                        <h5 class="card-title">E-mail</h5>
                        <div>
                            <input>
                        </div>
                        <h5 class="card-title">Hasło</h5>
                        <div>
                            <input>
                        </div>
                        <a href="{{ path('app_register') }}"><button class="btn btn-primary mt-2 button-size" >Zarejestruj się</button></a>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}